# ===========================================
# MindTrace for Playwright - Configuration
# ===========================================

# ----------------- LLM Provider -----------------
# MindTrace AI Module supports:

# Option 1: OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# Option 2: Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Option 3: Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:latest

# Active Provider
LLM_PROVIDER=openai

# ----------------- MindTrace Modules -----------------
# MindTrace Heal (Self-Healing)
MINDTRACE_HEAL_ENABLED=true
MINDTRACE_HEAL_AUTO_APPLY=false
MINDTRACE_HEAL_CONFIDENCE_THRESHOLD=0.85
MINDTRACE_HEAL_MAX_ATTEMPTS=3

# MindTrace RCA (Root Cause Analysis)
MINDTRACE_RCA_ENABLED=true
MINDTRACE_RCA_FLAKY_THRESHOLD=0.3
MINDTRACE_RCA_AUTO_JIRA=false

# MindTrace AI (Reasoning)
MINDTRACE_AI_TEMPERATURE=0.7
MINDTRACE_AI_MAX_TOKENS=2000

# MindTrace CI (Integration)
MINDTRACE_CI_PUBLISH_ARTIFACTS=true
MINDTRACE_CI_NOTIFY_SLACK=true
MINDTRACE_CI_NOTIFY_JIRA=false

# ----------------- Test Configuration -----------------
BASE_URL=http://localhost:3000
TEST_ENV=local
HEADLESS=true
PARALLEL_WORKERS=4
RETRY_COUNT=2
TIMEOUT=30000

# ----------------- Selector Engine -----------------
MINDTRACE_SELECTOR_STRATEGY=stability
MINDTRACE_SELECTOR_RANKING_ENABLED=true

# ----------------- Artifacts -----------------
MINDTRACE_ARTIFACTS_PATH=mindtrace-artifacts
SCREENSHOT_ON_FAILURE=true
TRACE_ON_FAILURE=true
VIDEO_ON_FAILURE=true

# ----------------- CI/CD -----------------
CI=false
CI_PROVIDER=teamcity

# TeamCity
TEAMCITY_BUILD_ID=
TEAMCITY_BUILD_URL=

# Notifications
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#test-automation

# Jira
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=QA

# ----------------- Company Info -----------------
COMPANY_NAME=MindTrace Inc.
PRODUCT_NAME=MindTrace for Playwright
